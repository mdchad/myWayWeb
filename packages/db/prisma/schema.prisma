generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

type HadithsBookTitle {
  ar String
  en String
  ms String
}

type HadithsChapterMetadata {
  ar String
  en String
  ms String
}

type HadithsChapterTitle {
  ar String
  en String
  ms String
}

type HadithsChapterTransliteration {
  en String
  ms String
}

type HadithsContent {
  ar String
  en String
  ms String
}

type HadithsVolumeTitle {
  ar String
  en String
  ms String
}

type VolumesTitle {
  ar String
  en String
  ms String
}

type VolumesTransliteration {
  en String
  ms String
}

type HadithsFootnotes {
    number String?
    text   String?
}


model Books {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  id_   String @map("id")
  name  String
  slug  String
  title String
}

model Hadiths {
  id                      String                        @id @default(auto()) @map("_id") @db.ObjectId
  book_id                 String
  book_name               String
  book_title              HadithsBookTitle
  chapter_id              String
  chapter_metadata        HadithsChapterMetadata
  chapter_name            String
  chapter_title           HadithsChapterTitle
  chapter_transliteration HadithsChapterTransliteration
  content                 HadithsContent[]
  footnotes               HadithsFootnotes[]
  number                  Float
  volume_id               String
  volume_name             String
  volume_title            HadithsVolumeTitle

  @@index([volume_id], map: "volume_id_1")
}

model Volumes {
  id              String                 @id @default(auto()) @map("_id") @db.ObjectId
  book_id         String
  book_name       String
  book_title      String
  id_             String                 @map("id")
  name            String
  title           VolumesTitle
  transliteration VolumesTransliteration
}